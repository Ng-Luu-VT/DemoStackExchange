<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#31426d"
    tools:context=".activity.MainActivity"
    android:weightSum= "9"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        >
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/actMain_ivBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_background"
            android:layout_marginTop="30dp">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="60dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="10dp"
            android:weightSum="2"
            >

            <Button
                android:layout_weight="1"
                android:id="@+id/actMain_btnSingup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#496fb0"
                android:text="Sing Up"
                android:textColor="#FFFFFF">

            </Button>

            <Button
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                android:id="@+id/actMain_btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#496fb0"
                android:text="Log In"
                android:textColor="#FFFFFF">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/actMain_tvStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start using without an account..."
                android:textColor="#a5b3cb"
                android:textSize="14sp">

            </TextView>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>